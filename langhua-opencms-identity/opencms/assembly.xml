<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/opencms-module</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.txt</include>
				<include>**/*.dtd</include>
				<include>**/*.jsp</include>
				<include>**/*.xsd</include>
				<include>**/*.jar</include>
				<include>**/*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/opencms-module</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*.png</include>
			</includes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/target/classes</directory>
			<outputDirectory>/system/modules/org.langhua.opencms.identity/classes
			</outputDirectory>
			<includes>
				<include>**/org/opencms/**</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/target/${artifactId}-${version}.jar</source>
			<outputDirectory>/system/modules/org.langhua.opencms.identity/lib
			</outputDirectory>
			<destName>opencms-identity.jar</destName>
			<filtered>false</filtered>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}
			</outputFileNameMapping>
			<scope>runtime</scope>
			<outputDirectory>/system/modules/org.langhua.opencms.identity/lib
			</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>
