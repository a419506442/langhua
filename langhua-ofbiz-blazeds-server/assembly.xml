<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/blazeds/</directory>
			<outputDirectory>blazeds</outputDirectory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.properties</include>
				<include>**/*.jsp</include>
				<include>**/*.ftl</include>
				<include>**/*.bsh</include>
				<include>**/*.js</include>
				<include>**/*.html</include>
				<include>**/*.db</include>
				<include>**/*.css</include>
				<include>**/*.xsd</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
	 <file>
			<source>${basedir}/target/OFBiz-BlazeDS-9.04.jar</source>
			<outputDirectory>blazeds/build/lib</outputDirectory>
			<destName>OFBiz-BlazeDS-9.04.jar</destName>
			<filtered>false</filtered>
		</file>
		<file>
			<source>${basedir}/blazeds/webapp/blazeds/ExampleFlash/ExampleFlash.swf</source>
			<outputDirectory>blazeds/webapp/blazeds/ExampleFlash</outputDirectory>
			<destName>ExampleFlash.swf</destName>
			<filtered>false</filtered>
		</file>
		<file>
			<source>${basedir}/blazeds/webapp/blazeds/ExampleFlash/playerProductInstall.swf</source>
			<outputDirectory>blazeds/webapp/blazeds/ExampleFlash</outputDirectory>
			<destName>playerProductInstall.swf</destName>
			<filtered>false</filtered>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>blazeds/lib</outputDirectory>
			<scope>runtime</scope>
			<includes />
			<excludes>
			 <exclude>xml-apis:xml-apis</exclude>
				<exclude>junit:junit</exclude>
				<exclude>junit:junit</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
