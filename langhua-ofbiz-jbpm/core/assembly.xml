<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/jbpm</directory>
			<outputDirectory>specialpurpose/jbpm</outputDirectory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.jsp</include>
				<include>**/*.ftl</include>
				<include>**/*.css</include>
				<include>**/*.bsh</include>
				<include>**/*.tld</include>
				<include>**/*.sql</include>
				<include>**/*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/jbpm</directory>
			<outputDirectory>specialpurpose/jbpm</outputDirectory>
			<includes>
				<include>**/*.gif</include>
				<include>**/*.png</include>
			</includes>
		</fileSet>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/runtime</directory>
			<outputDirectory>runtime</outputDirectory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/target/${artifactId}-${version}.jar</source>
			<outputDirectory>specialpurpose/jbpm/lib</outputDirectory>
			<destName>${artifactId}-${version}.jar</destName>
			<filtered>false</filtered>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
            <scope>runtime</scope>
			<outputDirectory>framework/base/lib/jbpm</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>
