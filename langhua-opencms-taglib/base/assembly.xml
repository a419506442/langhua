<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/opencms-module</directory> 
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*.txt</include>
				<include>**/*.dtd</include>
				<include>**/*.jsp</include>
				<include>**/*.xsd</include>
                <include>**/*.js</include>
			</includes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/opencms-module</directory>
			<outputDirectory></outputDirectory>
			<includes>
			    <include>**/*.xml</include>
				<include>**/*.jpg</include>
				<include>**/*.properties</include>
			</includes>
		</fileSet>		
        <fileSet>
            <useDefaultExcludes>true</useDefaultExcludes>
            <useStrictFiltering>false</useStrictFiltering>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/system/modules/org.langhua.opencms.taglib.common/classes
            </outputDirectory>
            <includes>
                <include>**/org/opencms/workplace/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/target/opencms-taglib-base-${project.version}.jar</source>
            <outputDirectory>/system/modules/org.langhua.opencms.taglib.common/lib</outputDirectory>
            <destName>opencms-taglib-base.jar</destName>
            <filtered>false</filtered>
        </file>        
	</files>	
</assembly>
