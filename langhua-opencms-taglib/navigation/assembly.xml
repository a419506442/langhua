<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<directory>${basedir}/src/opencms-module/</directory> 
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*.txt</include>
				<include>**/*.dtd</include>
				<include>**/*.jsp</include>
				<include>**/*.xsd</include>
                <include>**/*.js</include>
                <include>**/*_css_xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<useDefaultExcludes>true</useDefaultExcludes>
			<directory>${basedir}/src/opencms-module/</directory>
            <outputDirectory></outputDirectory>
			<includes>
			    <include>**/*.xml</include>
			    <include>**/*.PNG</include>
                <include>**/*.png</include>
                <include>**/*.jpg</include>
			</includes>
		</fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/target/opencms-taglib-navigation-${project.version}.jar</source>
            <outputDirectory>/system/modules/org.langhua.opencms.taglib.navigation/lib</outputDirectory>
            <destName>opencms-taglib-navigation.jar</destName>
            <filtered>false</filtered>
        </file>        
	</files>	
</assembly>
