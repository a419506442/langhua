<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<lineEnding>unix</lineEnding>
			<useDefaultExcludes>true</useDefaultExcludes>
			<useStrictFiltering>false</useStrictFiltering>
			<directory>${basedir}/src/main/webapp</directory>
			<outputDirectory>alipay</outputDirectory>
			<includes>
				<include>**/*.xml</include>
				<include>**/*.txt</include>
                <include>**/*.dtd</include>
                <include>**/*.jsp</include>
                <include>**/*.xsd</include>
                <include>**/*.jar</include>
                <include>**/*.ftl</include>
                <include>**/*.properties</include>
			</includes>
		</fileSet>
    </fileSets>
    <files>
        <file>
            <source>${basedir}/alipay/target/alipay-2.0.jar</source>
            <outputDirectory>alipay/lib</outputDirectory>
            <destName>alipay-2.0.jar</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/core/target/ofbiz-alipay-core-09.04.jar</source>
            <outputDirectory>alipay/lib</outputDirectory>
            <destName>ofbiz-alipay-core-09.04.jar</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${basedir}/filter/target/apache-servlet-filter-1.2.jar</source>
            <outputDirectory>alipay/lib</outputDirectory>
            <destName>apache-servlet-filter-1.2.jar</destName>
            <filtered>false</filtered>
        </file>
	</files>
</assembly>
